	public Calculator() {
		setLayout(new BorderLayout());
		nTextArea.setText("34");
		northP.add(nTextArea,BorderLayout.EAST);
		
		
		add(northP,BorderLayout.NORTH);
	}
	
	
	public static void main(String[] args) {
		new Calculator();
		
	}

}
