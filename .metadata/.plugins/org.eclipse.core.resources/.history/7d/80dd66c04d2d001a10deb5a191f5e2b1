package layout;

import java.awt.BorderLayout;
import java.awt.Button;
import java.awt.FlowLayout;
import java.awt.Frame;
import java.awt.GridLayout;
import java.awt.Panel;
import java.awt.TextArea;

public class Calculator extends Frame{
	Panel northP;
	Panel centerP;
	Button b1,b2,b3,b4,b5,b6,b7,b8,b9,b0,
		   plusB,minusB,mulB,divB,equalB,resetB;
	TextArea nTextArea;
	
	
	public Calculator() {
		setTitle("Calculator");
		setSize(500,600);
		setVisible(true);
		this.setLayout(new BorderLayout());
		northP = new Panel();
		centerP= new Panel();
		northP.setLayout(new FlowLayout());
		centerP.setLayout(new GridLayout(4,4,5,5));
		
		nTextArea = new TextArea();
		nTextArea.setText("34");
		
				
		b1 = new Button("1");
		b2 = new Button("2");
		b3 = new Button("3");
		b4 = new Button("4");
		b5 = new Button("5");
		b6 = new Button("6");
		b7 = new Button("7");
		b8 = new Button("8");
		b9 = new Button("9");
		b0 = new Button("0");
		plusB = new Button("+");
		minusB = new Button("-");
		mulB = new Button("X");
		divB = new Button("/");
		equalB = new Button("=");
		resetB = new Button("C");
		
		
		
		/****************northP*********************/
//		BorderLayout bl = new BorderLayout();
//		northP.setLayout(bl);
//		northP.add(nTextArea,BorderLayout.EAST);
		
		
		/****************centerP*********************/
		centerP.add(b1);
		add(b2);
		add(b3);
		add(plusB);
		add(b4);
		add(b5);
		add(b6);
		add(minusB);
		add(b7);
		add(b8);
		add(b9);
		add(mulB);
		add(b0);
		add(equalB);
		add(resetB);
		add(divB);
		
		add(northP,BorderLayout.NORTH);
	}
	
	
	public static void main(String[] args) {
		new Calculator();
		
	}

}
