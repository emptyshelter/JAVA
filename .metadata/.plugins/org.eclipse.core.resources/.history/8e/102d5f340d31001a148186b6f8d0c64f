	/**
	 * Create the frame.
	 * @throws Exception 
	 */
	public ChatClientFrame() throws Exception {
		setTitle("ChatClient");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 504, 324);
		contentPane = new JPanel();
