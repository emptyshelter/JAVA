package layout;

import java.awt.BorderLayout;
import java.awt.Button;
import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.Frame;
import java.awt.List;
import java.awt.Panel;
import java.awt.TextArea;

import javax.swing.border.Border;

public class Chatting extends Frame {
	Panel southP;
	Panel centerP;
	Panel northP;
	Button sb1,sb2,sb3,sb4;
	Button nb1,nb2,nb3,nb4;
	List cList;
	TextArea cTextArea;
	
	public Chatting() {
		setLayout(new BorderLayout());
		setTitle("Chatting app");
		setSize(300, 400);
		
		
		/**************north panel***************/
		northP = new Panel();
		northP.setBackground(Color.PINK);
		northP.setLayout(new FlowLayout());
		
		/**************center panel***************/
		centerP = new Panel();
		centerP.setLayout(new BorderLayout());
		cList = new List();
		cList.add("ㅁ");
		cList.add("이소라");
		cList.add("이효리");
		cList.add("공유");
		cList.add("장동건");
		cTextArea = new TextArea();
		cTextArea.setText("김태희: 요즘 뭐하세요?");
		centerP.add(cList,BorderLayout.WEST);
		centerP.add(cTextArea,BorderLayout.CENTER);
	}
	
	
	
	
	public static void main(String[] args) {
		new Chatting();
		
	}

}
