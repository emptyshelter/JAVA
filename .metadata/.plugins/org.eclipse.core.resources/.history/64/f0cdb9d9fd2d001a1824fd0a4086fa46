package paint;

import java.awt.BorderLayout;
import java.awt.EventQueue;
import java.awt.Graphics;
import java.awt.Image;
import java.awt.Toolkit;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;

public class GameFrame extends JFrame {

	private JPanel contentPane;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					GameFrame frame = new GameFrame();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public GameFrame() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(200, 200, 300, 400);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		contentPane.setLayout(new BorderLayout(0, 0));
		setContentPane(contentPane);
		/*************************/
		backImage = Toolkit.getDefaultToolkit().getImage("penguin_back.jpg");
		penguins = new Image[3];
		penguins[0]=Toolkit.getDefaultToolkit().getImage("penguin1.gif");
		penguins[1]=Toolkit.getDefaultToolkit().getImage("penguin2.gif");
		penguins[2]=Toolkit.getDefaultToolkit().getImage("penguin3.gif");
		
		pX=10;
		pY=300;
		imageNo = 0;
		/*************************/
		requestFocus();
		//event
		this.addKeyListener();
	}
	Image backImage;
	Image [] penguins;
	int pX, pY;//Æë±ÏÀÇ À§Ä¡
	int imageNo;//Æë±ÏÀÇ ÀÌ¹ÌÁö¹øÈ£
	@Override
	public void paint(Graphics g) {
		g.drawImage(backImage, 0,0,getWidth(),getHeight(),this);
		g.drawImage(penguins[imageNo], pX,pY,this);
	}
	/************KeyListener Impl*************/
	
	/*************************/

}










