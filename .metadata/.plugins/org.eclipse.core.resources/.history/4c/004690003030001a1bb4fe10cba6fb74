package client;

import java.io.IOException;
import java.net.InetAddress;
import java.net.Socket;
import java.net.UnknownHostException;

public class SocketInfoMain {

	public static void main(String[] args) throws Exception {
		Socket socket1 = new Socket("192.168.15.31",8000);
		System.out.println(socket1);
		Socket socket2 = new Socket("125.209.222.142",80);
		System.out.println(socket2);
		
		InetAddress remoteAddress = socket1.getInetAddress();
		int remotePort = socket1.getPort();
		socket1.getLocalAddress();
		socket1.getLocalPort();

	}

}
